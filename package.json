{
  "name": "lambda-simulator",
  "version": "1.0.0",
  "description": "A local simulator for AWS Lambda functions using TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
